}

export function checkbox3_change(event) {
	if ($w("#checkbox3").checked){
		$w("#checkbox4").checked = false;
      	$w('#group7').expand();
		$w('#button5').expand();
		$w('#group6').collapse();
		$w('#button4').collapse();
		
    }
    else{
			$w('#group7').collapse();
